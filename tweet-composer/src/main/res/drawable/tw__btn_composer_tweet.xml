<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tw__composer_blue" />
            <corners android:radius="@dimen/tw__btn_tweet_post_radius" />
            <padding android:left="@dimen/tw__btn_tweet_post_left_padding"
                     android:right="@dimen/tw__btn_tweet_post_right_padding" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/tw__faded_blue" />
            <corners android:radius="@dimen/tw__btn_tweet_post_radius" />
            <padding android:left="@dimen/tw__btn_tweet_post_left_padding"
                     android:right="@dimen/tw__btn_tweet_post_right_padding" />
        </shape>
    </item>
</selector>